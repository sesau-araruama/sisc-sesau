generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   // Hash da senha (NUNCA texto claro)
  role      String   // "admin", "medico", "atendente"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Removido: image, emailVerified (não usaremos mais)
  // Removido: accounts, sessions (do NextAuth)
}

// REMOVIDOS: modelos do NextAuth (Account e Session)
// REMOVIDO: modelo Message (chat removido)

// ✅ MODELO PACIENTE (próxima funcionalidade)
model Patient {
  id           String   @id @default(cuid())
  name         String
  cpf          String?  @unique
  birthDate    DateTime?
  gender       String?  // "M", "F", "Outro"
  phone        String?
  email        String?
  address      String?
  neighborhood String?
  city         String   @default("Araruama")
  zipCode      String?
  susNumber    String?  @unique // Número do cartão SUS
  medicalRecord String? // Prontuário médico
  
  // Contatos de emergência
  emergencyContactName  String?
  emergencyContactPhone String?
  
  // Informações de saúde
  allergies      String?
  chronicDiseases String?
  medications    String?
  observations   String?
  
  // Controle interno
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String?  // ID do usuário que cadastrou
  
  @@index([name])
  @@index([cpf])
  @@index([susNumber])
}